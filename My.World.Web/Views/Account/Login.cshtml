@model My.World.Web.ViewModel.UserViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<div class="card-group">
    <div class="card p-4">
        <div class="card-body">
            <form asp-action="Login" method="post" class="form-signin">
                <h1>Login</h1>
                <p class="text-muted">Sign In to your account</p>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <svg class="c-icon">
                                <use xlink:href="/vendors/coreui/icons/svg/free.svg#cil-user"></use>
                            </svg>
                        </span>
                    </div>
                    <input asp-for="username" class="form-control" type="text" placeholder="Username">
                </div>
                <div class="input-group mb-4">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <svg class="c-icon">
                                <use xlink:href="/vendors/coreui/icons/svg/free.svg#cil-lock-locked"></use>
                            </svg>
                        </span>
                    </div>
                    <input asp-for="password" class="form-control" type="password" placeholder="Password">
                </div>
                <div class="row">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <button class="btn btn-primary px-4" type="submit">Login</button>
                    </div>
                    <div class="col-6 text-right">
                        <button class="btn btn-link px-0" type="button">Forgot password?</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
        <div class="card-body text-center">
            <div>
                <h2>Sign up</h2>
                <p></p>
                <button class="btn btn-lg btn-outline-light mt-3" type="button" onclick="@("window.location.href='" + @Url.Action("SignUp", "Account") + "'");">Register Now!</button>
            </div>
        </div>
    </div>
</div>
