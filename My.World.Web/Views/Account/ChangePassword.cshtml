@model My.World.Api.Models.UsersModel

@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Breadcrumb"] = "Change Password";
}

<div class="c-body">
    <main class="c-main">
        <div class="container-fluid">
            <div class="fade-in">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="card">
                            <div class="card-header">
                                <strong>Your Details</strong>
                            </div>
                            <div class="card-body">
                                <form class="form-horizontal" action="" method="post">
                                    <ul class="c-sidebar-nav">
                                        <li class="c-sidebar-nav-item">
                                            <a class="c-sidebar-nav-link" asp-area="" asp-controller="Account" asp-action="UserProfile">
                                                Profile
                                            </a>
                                        </li>
                                        <li class="c-sidebar-nav-item">
                                            <a class="c-sidebar-nav-link active" asp-area="" asp-controller="Account" asp-action="AccountSetting">
                                                Account
                                            </a>
                                        </li>
                                        <li class="c-sidebar-nav-item">
                                            <a class="c-sidebar-nav-link" asp-area="" asp-controller="Account" asp-action="Notification">
                                                Notification
                                            </a>
                                        </li>
                                        <li class="c-sidebar-nav-item">
                                            <a class="c-sidebar-nav-link" asp-area="" asp-controller="Account" asp-action="ChangePassword">
                                                Change Password
                                            </a>
                                        </li>
                                        <li class="c-sidebar-nav-item">
                                            <a class="c-sidebar-nav-link" asp-area="" asp-controller="Account" asp-action="UserPlanDetails">
                                                Content Plans
                                            </a>
                                        </li>
                                    </ul>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <form asp-action="ChangePassword">
                            <div class="form-group">
                                <label asp-for="new_password" class="control-label"></label>
                                <input asp-for="new_password" class="form-control" />
                                <span asp-validation-for="new_password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="confirm_password" class="control-label"></label>
                                <input asp-for="confirm_password" class="form-control" />
                                <span asp-validation-for="confirm_password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Submit" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>