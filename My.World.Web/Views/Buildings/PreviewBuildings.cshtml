		};



        $(document).ready(function () {
			setNameBody();
			setDescriptionBody();
			setType_of_buildingBody();
			setAlternate_namesBody();
			setTagsBody();
			setCapacityBody();
			setPriceBody();
			setOwnerBody();
			setTenantsBody();
			setAffiliationBody();
			setFacadeBody();
			setFloor_countBody();
			setDimensionsBody();
			setArchitectural_styleBody();
			setPermitsBody();
			setPurposeBody();
			setAddressBody();
			setArchitectBody();
			setDeveloperBody();
			setNotable_eventsBody();
			setConstructed_yearBody();
			setConstruction_costBody();
			setNotesBody();
			setPrivate_NotesBody();

        });

    </script>
}